#include <iostream>
using namespace std;

int main() {
    cout << "Even numbers between -1 and 20 are: ";

    for (int i = 0; i <= 20; i += 2) {
        if (i >= -1) {
            cout << i << " ";
        }
    }

  int n;
    
    for(n = -1; n<20; n++){
    	if(n%2==0)
			cout<<n<<",";
	}




    cout <<endl;

    return 0;
}
