
#include <iostream>
using  namespace std;
int maximumNumber(int , int , int );
int main() {
   int a,b,c;
   
   cout<<" Enter the value of a: ";
   cin>>a;
   cout<<" Enter the value of b: ";
   cin>>b;
   cout<<" Enter the value of c: ";
   cin>>c;
   
  cout<<"Maximum Number is : "<<maximumNumber(a, b,c);
    return 0;
}

int maximumNumber(int a, int b, int c){
    
    if(a>b && a>c){
        return a;
    }
    else if (b>a && b>c){
        return b;
    }
    else
        return c;
    
}
