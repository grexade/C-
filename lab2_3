#include <iostream>
using namespace std;


int main()
{
    int num1, num2, num3;

    cout << "Please enter value1: ";
    cin >> num1;
    
    cout << "Please enter value2: ";
    cin >> num2;
    
    cout << "Please enter value3: ";
    cin >> num3;

	cout<<"Values in forward: "<<endl;
	cout<<num1<<","<<num2<<","<<num3<<endl;
	
	cout<<"Values in reverse order: "<<endl;
	cout<<num3<<","<<num2<<","<<num1;

    return 0;
}
