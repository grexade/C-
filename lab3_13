
#include <iostream>
using namespace std;
int main() {

    
   
    int sum_even = 0, sum_odd=0,  val;
    
    cout<<"Please enter a value greater than 40!";
    cin>>val;
    
    for (int i = 0; i <= val; i++ ) {
        if (i%2==0)
            sum_even += i;
        else
            sum_odd += i;
    
    }
    cout << "The sum of the even numbers is: " << sum_even <<endl;
    cout << "The sum of the odd numbers is: " << sum_odd <<endl;


    return 0;
}


#include <iostream>
using namespace std;

int main() {
   int num, sumEven = 0, sumOdd = 0;

   // Get a number greater than 40 from user
   do {
      cout << "Enter a number greater than 40: ";
      cin >> num;
   } while (num <= 40);

   // Calculate the sum of all even and odd numbers from 0 up to the entered number
   for (int i = 0; i <= num; i++) {
      if (i % 2 == 0) {
         sumEven += i;
      } else {
         sumOdd += i;
      }
   }

   // Display the sum of even and odd numbers
   cout << "Sum of even numbers: " << sumEven << endl;
   cout << "Sum of odd numbers: " << sumOdd << endl;

   return 0;
}
