#include <iostream>
#include <cmath>
using namespace std;
int main (void){
	
	cout<<"1- Calculate the volume of the cube "<<endl;
	cout<<"2- Calculate the area of the sphere "<<endl;
	cout<<"3- Calculate the area of the cylinder "<<endl;
	
	int choice, area, rad,hei;
	
	cout<<"Enter the choice (1-3) : ";
	cin>>choice;
	
	if (choice == 1){
		cout<<".....volume of the cube......"<<endl;
		cout<<"Enter the area: ";
		cin>>area;
		cout<<"Volume of the cube is : "<<pow(area,3);
	}
	else if (choice ==2){
		cout<<".....Area of the sphere......"<<endl;
		cout<<"Enter the radius: ";
		cin>>rad;
		cout<<"Area of the sphere : "<<4 * 3.142* pow(rad,2);
	}
	else if (choice ==3){
		cout<<".....Area of a Cylinder......"<<endl;
		cout<<"Enter the radius: ";
		cin>>rad;
		cout<<"Enter the height: ";
		cin>>hei;
		cout<<"Area of a cylinder is  : "<<(2 * 3.142* rad* hei) + (2*3.142*pow(rad,2));
	}
	else
		cout<<"you entered a wrong number!";
	
		
		
	
	
	return 0;
}


#include <iostream>
#include <cmath>
using namespace std;
int main (void){
	
	cout<<"1- Calculate the volume of the cube "<<endl;
	cout<<"2- Calculate the area of the sphere "<<endl;
	cout<<"3- Calculate the area of the cylinder "<<endl;
	
	int choice, area, rad,hei;
	
	cout<<"Enter the choice (1-3) : ";
	cin>>choice;
	
	switch(choice){
		
		case 1: 
			cout<<".....volume of the cube......"<<endl;
			cout<<"Enter the area: ";
			cin>>area;
			cout<<"Volume of the cube is : "<<pow(area,3);
			break;
		
		case 2:
			cout<<".....Area of the sphere......"<<endl;
			cout<<"Enter the radius: ";
			cin>>rad;
			cout<<"Area of the sphere : "<<4 * 3.142* pow(rad,2);
			break;
			
		case 3:
			cout<<".....Area of a Cylinder......"<<endl;
			cout<<"Enter the radius: ";
			cin>>rad;
			cout<<"Enter the height: ";
			cin>>hei;
			cout<<"Area of a cylinder is  : "<<(2 * 3.142* rad* hei) + (2*3.142*pow(rad,2));
			break;
			
		default:
			cout<<"Wrong input!";
	}
	
	return 0;
}
