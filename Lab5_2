#include <iostream>
using namespace std;


int countDigits(int num) {
    if (num/10 == 0)
        return 1;

    return 1 + countDigits(num / 10);
}
void countDigits(int num, int dg){
	if(num!=0)
		countDigits(num/10, dg+1);
	else
		cout<<dg;
		
}



int main() {
    int num;

    cout << "Input a number: ";
    cin >> num;

    cout << "The number of digits in the number is: " << countDigits(num) << endl;

    return 0;
}
