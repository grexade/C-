#include <iostream>
using namespace std;
int main(void)
{
	int num1, num2;
	
	cout<<"Please enter the first number : ";
	cin>>num1;
	cout<<"Please enter the second number : ";
	cin>>num2;
	
	if (num1>num2)
	cout<<"The biggest number is : "<<num1;
	else
	cout<<"The biggest number is : "<<num2;
	
	return 0;
}

#include <iostream>
using namespace std;
int main(void)
{
	int op1,op2,total;
	char operat;
	
	cout<<"Enter operand1 : ";
	cin>>op1;
	cout<<"Enter operator : ";
	cin>>operat;
	cout<<"Enter operand2 : ";
	cin>>op2;
	
	switch(operat){
		
		case '+':
			total = op1+op2;
			cout<<"Result of "<<op1<<operat<<op2<<" is "<<total;
			break;
			
		case '-':
			total = op1-op2;
			cout<<"Result of "<<op1<<operat<<op2<<" is "<<total;
			break;
		
		case '*':
			total = op1*op2;
			cout<<"Result of "<<op1<<operat<<op2<<" is "<<total;
			break;
			
		case '/':
			total = op1/op2;
			cout<<"Result of "<<op1<<operat<<op2<<" is "<<total;
			break;
			
		case '%':
			total = op1%op2;
			cout<<"Result of "<<op1<<operat<<op2<<" is "<<total;
			break;
	}
	
	return 0;
}

#include <iostream>
using namespace std;
int main(void)
{
	int order, amount;
	cout<<"** Food Menu**"<<endl;
	cout<<"1-> Pasta (6$)"<<endl;
	cout<<"2-> Hamburger (7$)"<<endl;
	cout<<"3-> Pizza (10$)"<<endl;
	
	cout<<endl<<"Select which food type do you want to order(1-3): ";
	cin>>order;
	
	switch(order){
		
		case 1:
			cout<<endl<<"How many Pasta would you like to order? : ";
			cin>>amount;
			cout<<endl<<"Total pay = "<<6*amount<<"$";
			break;
		
		case 2:
			cout<<endl<<"How many hamburgers would you like to order? : ";
			cin>>amount;
			cout<<endl<<"Total pay = "<<7*amount<<"$";
			break;
			
		case 3:
			cout<<endl<<"How many Pizza would you like to order? : ";
			cin>>amount;
			cout<<endl<<"Total pay = "<<10*amount<<"$";
			break;
		
	}
	return 0;
}
